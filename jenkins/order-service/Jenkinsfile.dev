pipeline {
    agent any

    tools {
        maven 'Maven3'
    }

    environment {
        SERVICE_NAME = 'order-service'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Debug Maven') {
            steps {
                sh 'which mvn || echo "Maven not found"'
                sh 'mvn --version || echo "Maven command failed"'
                sh 'java --version || echo "java command failed"'
            }
        }

        stage('Test') {
            steps {
                dir("${SERVICE_NAME}") {
                    sh 'mvn clean test'
                }
            }
        }

        stage('Build') {
            steps {
                dir("${SERVICE_NAME}") {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir("${SERVICE_NAME}") {
                    sh "docker build -t ${IMAGE_TAG} ."
                }
            }
        }

        
    }
}